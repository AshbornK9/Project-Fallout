		<ArmorRating_Heat>0.50</ArmorRating_Heat>
		<Insulation_Cold>3</Insulation_Cold>
		<Insulation_Heat>3</Insulation_Heat>
		<EquipDelay>4</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<MoveSpeed>-0.10</MoveSpeed>
		<WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
		<ToxicSensitivity>-0.3</ToxicSensitivity>
	</equippedStatOffsets>
	<thingCategories>
		<li>Apparel</li>
	</thingCategories>
	<costList>
		<ComponentIndustrial>4</ComponentIndustrial>
		<Steel>175</Steel>
	</costList>
	<apparel>
		<bodyPartGroups>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Arms</li>
			<li>Legs</li>
			<li>Feet</li>
		</bodyPartGroups>
		<wornGraphicPath>Things/Fallout/Apparel/PowerArmor/Raider/Armor/RaiderPA</wornGraphicPath>
		<layers>
			<li>Middle</li>
			<li>Shell</li>
		</layers>
		<tags>
			<li>Outlander</li>
			<li>Military</li>
		</tags>
		<defaultOutfitTags>
			<li>Soldier</li>
		</defaultOutfitTags>
	</apparel>
</ThingDef>

<ThingDef ParentName="ArmorMakeableBase">
	<defName>PFT-45PowerArmor</defName>
