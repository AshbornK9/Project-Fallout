<?xml version="1.0" encoding="UTF-8"?>

<Defs>

<ThingDef Abstract="True" Name="ApparelBase">
	<thingClass>Apparel</thingClass>
	<category>Item</category>
	<selectable>True</selectable>
	<pathCost>10</pathCost>
	<useHitPoints>True</useHitPoints>
	<graphicData>
		<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
	</graphicData>
	<drawGUIOverlay>true</drawGUIOverlay>
	<statBases>
		<MaxHitPoints>100</MaxHitPoints>
		<Flammability>1.0</Flammability>
		<DeteriorationRate>0.5</DeteriorationRate>
	</statBases>
	<altitudeLayer>Item</altitudeLayer>
	<alwaysHaulable>True</alwaysHaulable>
	<tickerType>Never</tickerType>
	<comps>
		<li Class="CompProperties_Forbiddable"/>
		<li>
			<compClass>CompColorable</compClass>
		</li>
		<li>
			<compClass>CompQuality</compClass>
		</li>
	</comps>
</ThingDef>

<ThingDef Abstract="True" Name="ApparelMakeableBase" ParentName="ApparelBase">
	<recipeMaker>
		<workSpeedStat>TailoringSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<recipeUsers>
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
		</recipeUsers>
		<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
	</recipeMaker>
</ThingDef>

<ThingDef Abstract="True" Name="ArmorMakeableBase" ParentName="ApparelBase">
	<recipeMaker>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<recipeUsers>
			<li>TableMachining</li>
		</recipeUsers>
		<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
	</recipeMaker>
</ThingDef>

<ThingDef ParentName="ArmorMakeableBase">
	<defName>X-01_PowerArmor</defName>
	<label>X-01 Power Armor</label>
	<description>The X-01 series of power armor was designed by the Enclave after the great war and was more heavily armored than previous models.</description>
	<techLevel>Spacer</techLevel>
	<recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>PFAdvancedPowerArmor</researchPrerequisite>
		<skillRequirements>
			<Intellectual>6</Intellectual>
			<Crafting>8</Crafting>
		</skillRequirements>
	</recipeMaker>
	<graphicData>
		<texPath>Things/Fallout/Apparel/PowerArmor/X-01/Armor/X-01_Fat_south</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<statBases>
		<WorkToMake>150000</WorkToMake>
		<Mass>12</Mass>
		<MaxHitPoints>900</MaxHitPoints>
		<MarketValue>7500</MarketValue>
		<ArmorRating_Blunt>0.6</ArmorRating_Blunt>
		<ArmorRating_Sharp>0.9</ArmorRating_Sharp>
		<ArmorRating_Heat>0.85</ArmorRating_Heat>
		<Insulation_Cold>10</Insulation_Cold>
		<Insulation_Heat>10</Insulation_Heat>
		<EquipDelay>4</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<MoveSpeed>0.10</MoveSpeed>
		<WorkSpeedGlobal>0.05</WorkSpeedGlobal>
		<ToxicSensitivity>-0.5</ToxicSensitivity>
	</equippedStatOffsets>
	<thingCategories>
		<li>Apparel</li>
	</thingCategories>
	<costList>
		<ComponentIndustrial>10</ComponentIndustrial>
		<ComponentSpacer>2</ComponentSpacer>
		<Steel>50</Steel>
		<Plasteel>125</Plasteel>
	</costList>
	<apparel>
		<bodyPartGroups>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Arms</li>
			<li>Legs</li>
			<li>Feet</li>
		</bodyPartGroups>
		<wornGraphicPath>Things/Fallout/Apparel/PowerArmor/X-01/Armor/X-01</wornGraphicPath>
		<layers>
			<li>Middle</li>
			<li>Shell</li>
		</layers>
		<tags>
			<li>Spacer</li>
			<li>Military</li>
		</tags>
		<defaultOutfitTags>
			<li>Soldier</li>
		</defaultOutfitTags>
	</apparel>
</ThingDef>

<ThingDef ParentName="ArmorMakeableBase">
	<defName>Raider_PowerArmor</defName>
