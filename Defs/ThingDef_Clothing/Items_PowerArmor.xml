	<techLevel>Industrial</techLevel>
	<recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>PoweredArmor</researchPrerequisite>
		<skillRequirements>
			<Intellectual>4</Intellectual>
			<Crafting>6</Crafting>
		</skillRequirements>
	</recipeMaker>
	<graphicData>
		<texPath>Things/Fallout/Apparel/PowerArmor/T-45/Suit/T-45PA_Thin_south</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<statBases>
		<WorkToMake>100000</WorkToMake>
		<Mass>15</Mass>
		<MaxHitPoints>500</MaxHitPoints>
		<MarketValue>2500</MarketValue>
		<ArmorRating_Blunt>0.50</ArmorRating_Blunt>
		<ArmorRating_Sharp>0.75</ArmorRating_Sharp>
		<ArmorRating_Heat>0.60</ArmorRating_Heat>
		<Insulation_Cold>5</Insulation_Cold>
		<Insulation_Heat>5</Insulation_Heat>
		<EquipDelay>4</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<ToxicSensitivity>-0.4</ToxicSensitivity>
	</equippedStatOffsets>
	<thingCategories>
		<li>Apparel</li>
	</thingCategories>
	<costList>
		<ComponentIndustrial>6</ComponentIndustrial>
		<Plasteel>50</Plasteel>
		<Steel>125</Steel>
	</costList>
	<apparel>
		<bodyPartGroups>
			<li>Torso</li>
			<li>Shoulders</li>
			<li>Arms</li>
			<li>Legs</li>
			<li>Feet</li>
		</bodyPartGroups>
		<wornGraphicPath>Things/Fallout/Apparel/PowerArmor/T-45/Suit/T-45PA</wornGraphicPath>
		<layers>
			<li>Middle</li>
			<li>Shell</li>
		</layers>
		<tags>
			<li>Outlander</li>
			<li>Military</li>
			<li>PFBrotherhoodKnight</li>
		</tags>
		<defaultOutfitTags>
			<li>Soldier</li>
		</defaultOutfitTags>
	</apparel>
</ThingDef>

