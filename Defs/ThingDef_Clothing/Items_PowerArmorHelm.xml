<ThingDef ParentName="ArmorHelmetMakeableBase">
	<defName>Apparel_X-01_Helmet</defName>
	<label>X-01 Power Armor Helmet</label>
	<description>A post-war power armor helmet developed by the Enclave.</description>
	<techLevel>Spacer</techLevel>
	<recipeMaker>
		<researchPrerequisite>PFAdvancedPowerArmor</researchPrerequisite>
		<skillRequirements>
			<Intellectual>6</Intellectual>
			<Crafting>8</Crafting>
		</skillRequirements>
	</recipeMaker>
	<graphicData>
		<texPath>Things/Fallout/Apparel/PowerArmor/X-01/Helmet/X-01Helm_south</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<statBases>
		<WorkToMake>30000</WorkToMake>
		<Mass>3.5</Mass>
		<MaxHitPoints>600</MaxHitPoints>
		<ArmorRating_Blunt>0.65</ArmorRating_Blunt>
		<ArmorRating_Sharp>1.15</ArmorRating_Sharp>
		<ArmorRating_Heat>0.95</ArmorRating_Heat>
		<Insulation_Cold>5</Insulation_Cold>
		<Insulation_Heat>3</Insulation_Heat>
		<EquipDelay>4</EquipDelay>
	</statBases>
	<equippedStatOffsets>
		<MoveSpeed>0.05</MoveSpeed>
		<ShootingAccuracyPawn>0.10</ShootingAccuracyPawn>
		<PsychicSensitivity>-0.50</PsychicSensitivity>
		<ToxicSensitivity>-0.4</ToxicSensitivity>
	</equippedStatOffsets>
	<costList>
		<ComponentIndustrial>5</ComponentIndustrial>
		<ComponentSpacer>1</ComponentSpacer>
		<Plasteel>100</Plasteel>
	</costList>
	<apparel>
		<bodyPartGroups>
			<li>FullHead</li>
		</bodyPartGroups>
		<wornGraphicPath>Things/Fallout/Apparel/PowerArmor/X-01/Helmet/X-01Helm</wornGraphicPath>
		<layers>
			<li>Overhead</li>
		</layers>
		<tags>
			<li>Military</li>
			<li>Enclave</li>
		</tags>
		<defaultOutfitTags>
			<li>Soldier</li>
		</defaultOutfitTags>
	</apparel>
</ThingDef>

